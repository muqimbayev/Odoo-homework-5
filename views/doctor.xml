<odoo>

    <record id="clinic_doctor_views_list" model="ir.ui.view">
        <field name="name">clinic.doctor.list</field>
        <field name="model">clinic.doctor</field>
        <field name="arch" type="xml">
            <list>

                    <field name="full_name"/>
                    <field name="specialty"/>
                    <field name="experience"/>
            </list>
        </field>
    </record>

    <record id="clinic_work_schedule_views_form" model="ir.ui.view">

    <field name="name">clinic.doctor.form</field>
    <field name="model">clinic.doctor</field>
    <field name="arch" type="xml">
        <form>
        <sheet>
            <group>
                <field name="full_name"/>
                <field name="specialty"/>
                <field name="experience"/>
                <field name="phone_number"/>
                <field name="is_active"/>
            </group>
            <notebook>
                <page string="Ish grafigi">
                    <field name="work_schedule_ids">
                        <list editable="bottom">
                            <field name="week_days"/>
                            <field name="working_hours"/>
                            <field name="lunch_time"/>
                        </list>
                    </field>
                </page>
            </notebook>

            </sheet>
        </form>
    </field>
    </record>
    
    <record id="clinic_doctor_action" model="ir.actions.act_window">
        <field name="name">Doktorlar</field>
        <field name="res_model">clinic.doctor</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="clinic_menu_doctor_schedule" name="Doktor" parent="clinic_menu" action="clinic_doctor_action"/>
    <menuitem id="clinic_menu_subdomain_doctor" name="Doktorlar" parent="clinic_menu_doctor_schedule" action="clinic_doctor_action"/>
    <menuitem id="clinic_menu_subdomain_work_schedule" name="Ish grafigi" parent="clinic_menu_doctor_schedule" action="clinic_work_schedule_action"/>

</odoo>