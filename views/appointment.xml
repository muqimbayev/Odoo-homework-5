<odoo>

    <record id="clinic_appointment_view_list" model="ir.ui.view">
        <field name="name">clinic.appointment.list</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <list>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="start_time"/>
                <field name="status" widget="badge"
                        decoration-success="status == 'recovered'"
                        decoration-info="status == 'new'"
                        decoration-danger="status == 'canceled'"
                        decoration-warning="status == 'treated'"/>
            </list>
        </field>
    </record>

    <record id="clinic_appointment_view_form" model="ir.ui.view">
        <field name="name">clinic.appointment.form</field>
        <field name="model">clinic.appointment</field>
        <field name="arch" type="xml">
            <form>
            <header>
            <button name="action_treated"
             type="object"
             string="Davolanmoqda"
             class="btn-warning"
             invisible="status in ['treated']"
             />
             <button name="action_recovered"
             type="object"
             string="Sog'aygan"
             class="btn-success"
             invisible="status in ['recovered']"

             />
             <button name="action_canceled"
             type="object"
             string="Bekor qilingan"
             class="btn-danger"
             invisible="status in ['canceled']"

             />

            <field name="status" widget="statusbar" statusbar_visible="new,treated,recovered,canceled"/>

            </header>
            <sheet>
                <group>
                <group>
                    <field name="doctor_id"/>
                    <field name="patient_id"/>
                    </group>
                        <group>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="status"/>
                            <field name="disease_name"/>
                        </group>
                        <notebook>
                        <page string="Retsept">
                        <field name="prescription_line_ids">
                        <list editable="bottom">
                        <field name="medicine_id"/>
                        <field name="dosage_unit" readonly="1"/>
                        <field name="dosage_quantity"/>
                        <field name="frequency_per_day"/>
                        <field name="duration"/>
                        <field name="note"/>

                        
                        </list>
                        </field>
                        </page>
                        </notebook>
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="clinic_appointment_action" model="ir.actions.act_window">
        <field name="name">Qabul</field>
        <field name="res_model">clinic.appointment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="clinic_menu" name="Klinika"/>
    <menuitem id="clinic_appointment_submenu" name="Qabul" parent="clinic_menu" action="clinic_appointment_action"/>


</odoo>