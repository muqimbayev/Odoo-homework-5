<odoo>
    <record id="service_order_rating_views_list" model="ir.ui.view">
        <field name="name">service.order.rating.list</field>
        <field name="model">service.order.rating</field>
        <field name="arch" type="xml">
            <list>
                <field name="customer_id"/>
                <field name="order_id"/>
                <field name="technician_id"/>
                <field name="score"/>
            </list>
        </field>
    </record>

    <record id="service_order_rating_views_from" model="ir.ui.view">
        <field name="name">service.order.rating.form</field>
        <field name="model">service.order.rating</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <field name="order_id"/>
                    <field name="customer_id"/>
                    <field name="technician_id"/>
                    <field name="center_id"/>
                    <field name="score"/>
                    <field name="comment"/>
                    <field name="rating_date"/>
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="service_order_rating_action" model="ir.actions.act_window">
        <field name="name">Rating</field>
        <field name="res_model">service.order.rating</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="service_order_rating_submenu" name="Rating" parent="service_menu" action="service_order_rating_action"/>
</odoo>