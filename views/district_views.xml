<odoo>
    <record id="service_district_views_list" model="ir.ui.view">
        <field name="name">service.district.list</field>
        <field name="model">service.district</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="state_id"/>
                <field name="population"/>
                <field name="area_km2"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <record id="service_district_views_form" model="ir.ui.view">
        <field name="name">service.district.form</field>
        <field name="model">service.district</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate"
                            type="object"
                            string="Faollashtitish"
                            class="btn-primary"/>
                    <button name="action_deactivate"
                            string="Nofaollashtirish"
                            type="object"
                            class="btn-danger"/>
                    <button name="action_cleanup_zero_payments"
                            type="object"
                            class="btn-info"
                            string="0 summani o'chirish"/>
                    <button name="action_finish_all_in_progress"
                            string="Jarayonni tugatish"
                            type="object"
                            class="btn-info"/>
                </header>
                <sheet>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="country_id"/>
                        <field name="state_id"/>
                        <field name="population"/>
                        <field name="area_km2"/>
                        <field name="is_active"/>
                    </group>
                    <group>
                        <field name="latitude"/>
                        <field name="longtitude"/>
                        <field name="center_count"/>
                        <field name="technician_count"/>
                        <field name="active_order_count"/>
                        <field name="done_order_count"/>
                        <field name="total_revenue"/>
                    </group>
                    <notebook>
                        <page string="Servis markazlari">
                            <field name="center_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="manager_name"/>
                                    <field name="capacity_per_day"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Faol buyurtmalar">
                            <field name="active_order_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="customer_id"/>
                                    <field name="technician_id"/>
                                    <field name="order_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Bugungi buyurtmalar">
                            <field name="today_order_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="customer_id"/>
                                    <field name="technician_id"/>
                                    <field name="order_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page><page string="Yakunlangan buyurtmalar">
                            <field name="done_order_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="customer_id"/>
                                    <field name="technician_id"/>
                                    <field name="order_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="service_district_action" model="ir.actions.act_window">
        <field name="name">Tumanlar</field>
        <field name="res_model">service.district</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="service_submenu_district" name="Tumanlar" parent="service_menu" action="service_district_action"/>
</odoo>