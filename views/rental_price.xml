<odoo>

    <record id="rental_price_list_views" model="ir.ui.view">
        <field name="name">rental price list view</field>
        <field name="model">rental_managment.rental_price</field>
        <field name="arch" type="xml">
                <list>
                    <field name="product_id"/>
                    <field name="interval_number"/>
                    <field name="interval_type"/>
                    <field name="price"/>
                </list>
        </field>
    </record>

    
    <record id="rental_category_form_views" model="ir.ui.view">
        <field name="name">rental rental_price form view</field>
        <field name="model">rental_managment.rental_price</field>
        <field name="arch" type="xml">
                <form>
                <sheet>
                <group>
                    <field name="product_id"/>
                    <field name="interval_number"/>
                    <field name="interval_type"/>
                    <field name="price"/>
                </group>    
                </sheet>
                </form>
        </field>
    </record>

 <record id="rental_managment_rental_price_action" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="res_model">rental_managment.rental_price</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="rental_order_serch_view" model="ir.ui.view">
        <field name="name">rental price search view</field>
        <field name="model">rental_managment.rental_price</field>
        <field name="arch" type="xml">
            <search>   
                <group>
                    <filter name="customer_id" string="Mahsulotlar" context="{'group_by':'product_id'}"/>

                </group>
            </search>
        </field>
    </record>

    <menuitem id="rental_managment_submenu_rental_price" name="Price" parent="rental_managment_submenu_configuration" action="rental_managment_rental_price_action"/>

</odoo>

