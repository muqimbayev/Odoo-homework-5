<odoo>
    <record id="service_part_views_list" model="ir.ui.view">
        <field name="name">service.part.list</field>
        <field name="model">service.part</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <record id="service_part_views_form" model="ir.ui.view">
        <field name="name">service.part.from</field>
        <field name="model">service.part</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate"
                            string="Aktivlashtirish"
                            class="btn-success"
                            type="object"/>
                    <button name="action_deactivate"
                            string="Nofaollashtirish"
                            class="btn-danger"
                            type="object"/>
                </header>
                <sheet>
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="is_active"/>
                    <field name="description"/>
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="service_part_action" model="ir.actions.act_window">
        <field name="name">Detallar</field>
        <field name="res_model">service.part</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="service_submenu_part" name="Detallar" parent="service_menu" action="service_part_action"/>
</odoo>