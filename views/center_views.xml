<odoo>

    <record id="service_center_views_list" model="ir.ui.view">
        <field name="name">service.center.list</field>
        <field name="model">service.center</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="district_id"/>
                <field name="active_order_count"/>
                <field name="is_active"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <record id="service_center_views_form" model="ir.ui.view">
        <field name="name">service.center.form</field>
        <field name="model">service.center</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_inactive_if_idle"
                    type="object"
                    string="Nofaol qilish"
                    class="btn-primary"/>
                    <button name="action_activate"
                    type='object'
                    string="Faollashtirish"
                    class="btn-success"/>
                    <button name="action_cleanup_zero_payments"
                    type="object"
                    string="0 to'lovlarni o'chirish"
                    class="btn-danger"/>
                    <button name="action_finish_all_in_progress"
                    type="object"
                    string="Buyurtmalarni tugallash"
                    class="btn-info"/>

                </header>
                <sheet>
                        <div class="oe_button_box" name="button_box">

                            <button name="order_count_button" type="object"
                            class="oe_stat_button" icon="fa-shopping-cart">
                            <field name='done_order_count' widget='statinfo' string="Buyurtmalar"/>
                            </button>

                            <button name="payment_count_button" type="object"
                            class="oe_stat_button" icon="fa-credit-card">
                            <field name='payment_count' widget='statinfo' string="To'lovlar"/>
                            </button>
                        </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="manager_name"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="technician_count"/>
                            <field name="active_order_count"/>
                            <field name="done_order_count"/>
                            <field name="today_order_count"/>
                            <field name="total_revenue"/>
                            <field name="avg_rating"/>
                        </group>
                        <notebook>
                            <page string="Joylashuv malumotlar">
                                <group>
                                    <group>
                                        <field name="country_id"/>
                                        <field name="state_id"/>
                                        <field name="district_id"/>
                                        <field name="address"/>
                                    </group>
                                    <group>
                                        <field name="latitude"/>
                                        <field name="longitude"/>
                                        <field name="capacity_per_day"/>
                                        <field name="utilization_rate"/>
                                        <field name="last_order_date"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Bugungi buyurtmalar">
                                <field name="today_order_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="customer_id"/>
                                    <field name="technician_id"/>
                                    <field name="order_date"/>
                                    <field name="state"/>
                                    <field name="labor_fee"/>
                                </list>
                                </field>
                            </page>
                            <page string="Ustalar">
                                <field name="technician_ids">
                                    <list editable="bottom">
                                        <field name="full_name"/>
                                        <field name="code"/>
                                        <field name="phone"/>
                                        <field name="specialty"/>
                                        <field name="is_active"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Baholar">
                                <field name="rating_ids">
                                    <list editable="bottom">
                                        <field name="customer_id"/>
                                        <field name="order_id"/>
                                        <field name="technician_id"/>
                                        <field name="score"/>
                                        <field name="rating_date"/>
                                        <field name="comment"/>

                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="service_center_action" model="ir.actions.act_window">
        <field name="name">Markazlar</field>
        <field name="res_model">service.center</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="service_submenu_center" name="Markazlar" parent="service_menu" action="service_center_action"/>

</odoo>