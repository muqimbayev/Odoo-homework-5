<odoo>

    <record id="clinic_medicine_views_list" model="ir.ui.view">
        <field name="name">clinic.medicine.list</field>
        <field name="model">clinic.medicine</field>
        <field name="arch" type="xml">
            <list>

                    <field name="name"/>
                    <field name="generic_name"/>
                    <field name="description"/>
            </list>
        </field>
    </record>

    <record id="clinic_work_medicine_views_form" model="ir.ui.view">

    <field name="name">clinic.medicine.form</field>
    <field name="model">clinic.medicine</field>
    <field name="arch" type="xml">
        <form>
        <sheet>
            <group>
                <group>
                <field name="name"/>
                <field name="generic_name"/>
                <field name="manufacturer"/>
                <field name="description"/>
                </group>
                <group>
                <field name="dosage_unit"/>
                <field name="suitable_age"/>
                </group>


            </group>

            <notebook>
                <page string="Mos kelmaydigan dorilar">
                    <field name="contraindications">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="generic_name"/>
                        </list>
                    </field>
                </page>
            </notebook>

            </sheet>
        </form>
    </field>
    </record>
    
    <record id="clinic_medicine_action" model="ir.actions.act_window">
        <field name="name">Dorilar</field>
        <field name="res_model">clinic.medicine</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="clinic_menu" name="Klinika"/>
    <menuitem id="clinic_menu_subdomain_medicine" name="Dorilar" parent="clinic_menu" action="clinic_medicine_action"/>

</odoo>