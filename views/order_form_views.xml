<odoo>
    <record id="order_form_views" model="ir.ui.view">
        <field name="name">order form view</field>
        <field name="model">rental_managment.rental_order</field>
        <field name="arch" type="xml">
            <form>
                  <header>    
                    <field name="status" widget="statusbar" options="{'clickable': '1'}" />
                    <button name="confirm_button" type="object" string="Confirm" class="btn-primary" invisible="status in ['confirmed', 'returned']"/>
                    <button name="returned_button" type="object" string="Return" class="btn-info" invisible="status in ['returned']"/>
                    <button name="canceled_button" type="object" string="Cancel" class="btn-danger" invisible="status in ['cancel']"/>


                </header>
                <sheet>
                    <group>
                        <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. R0001" readonly="1"/>
                        </h1>
                    </div>                         
                        <group>
                                <field name="customer_id"/>
                                <field name="product_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                        </group>
                        <group>
                            <field name="returned_date"/>
                            <field name="duration"/>
                            <field name="human_readable_duration"/>
                            <field name="total_price"/>
                            <field name="compute_price"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>